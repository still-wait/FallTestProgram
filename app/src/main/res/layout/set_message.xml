<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/android_layout_bg"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sos_txt_msg"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_add"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="求救显示信息编辑"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/sos_msg_edt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textview_back"
                android:gravity="top"
                android:hint="请输入信息"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/qj_txt_msg"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_add"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="16dp"
                android:text="求救发送信息(实时更新)"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/qj_msg_txt"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textview_back"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dd_txt_msg"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_add"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="16dp"
                android:text="跌倒发送信息(实时更新)"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dd_msg_txt"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textview_back"
                android:gravity="top"
                android:hint="请输入信息"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/reset_illness"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="@dimen/item_margin_large"
                android:background="@drawable/btn_ok2"
                android:text="重新设置病情信息"
                android:textSize="20dp"
                android:textColor="@drawable/btn_login_text" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>