<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_item_center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="真实姓名"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/msg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right"
            android:background="@null"
            android:hint="请输入"
            android:inputType="text"
            android:textColor="@color/dimgray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_msg_username"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/msg_username"
            android:src="@mipmap/login_delete_data_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/bg_item_center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="紧急联系人1"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/msg_cellphone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right"
            android:background="@null"
            android:hint="请输入"
            android:inputType="text"
            android:textColor="@color/dimgray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_msg_cellphone1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/msg_cellphone1"
            android:src="@mipmap/login_delete_data_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/bg_item_center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="紧急联系人2"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/msg_cellphone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right"
            android:background="@null"
            android:hint="请输入"
            android:inputType="text"
            android:textColor="@color/dimgray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_msg_cellphone2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/msg_cellphone2"
            android:src="@mipmap/login_delete_data_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/bg_item_center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="紧急联系人3"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/msg_cellphone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right"
            android:background="@null"
            android:hint="请输入"
            android:inputType="text"
            android:textColor="@color/dimgray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_msg_cellphone3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/msg_cellphone3"
            android:src="@mipmap/login_delete_data_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_mymessage"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="@dimen/item_margin_large"
        android:background="@drawable/btn_ok"
        android:enabled="false"
        android:text="确认修改"
        android:textColor="@drawable/btn_login_text" />

</LinearLayout>