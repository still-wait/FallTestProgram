<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sos_warn_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="202dp" >

        <TextView
            android:id="@+id/txt_illness"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="123dp"
            android:text="疾病"
            android:textColor="@color/red"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="68dp" >

        <TextView
            android:id="@+id/txt_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="打120"
            android:textColor="@color/red"
            android:background="@drawable/textview_back"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="31dp" >

        <TextView
            android:id="@+id/txt_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="139*****"
            android:textColor="@color/red"
            android:inputType="textMultiLine"
            android:background="@drawable/textview_back"
            android:textSize="29sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/btn_warn_exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/sos_btn_close" />
    </LinearLayout>

</LinearLayout>